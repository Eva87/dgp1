<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dgp2.tetris">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/indice"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/indice"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".pantallaAvatar"></activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".Cambiocolorpiezas" />
        <activity android:name=".Configuracion" />
        <activity android:name=".Ranking" />
        <activity android:name=".ayuda" />
        <activity android:name=".PantallaJuego" />
        <activity android:name=".PantallaCarga">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>