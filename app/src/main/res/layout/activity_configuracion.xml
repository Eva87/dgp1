<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoconfiguracion"
    tools:context=".Configuracion">

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/transparent"
        android:onClick="volveratrasconfiguracion"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iratras" />

    <ImageButton
        android:id="@+id/musicaconfiguracion"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/corcheaon"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/colorpiezascambiar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="36dp"
        android:background="@android:color/transparent"
        android:onClick="cambiarcolordelaspiezas"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/musicaconfiguracion"
        app:srcCompat="@drawable/paletacolores" />
</androidx.constraintlayout.widget.ConstraintLayout>