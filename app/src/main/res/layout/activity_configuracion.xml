<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".Configuracion">

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:onClick="volveratrasconfiguracion"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorpiezascambiar"
        app:srcCompat="@drawable/volver" />

    <ImageButton
        android:id="@+id/musica"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/corcheaoff" />

    <ImageButton
        android:id="@+id/colorpiezascambiar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:onClick="cambiarcolordelaspiezas"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/musica"
        app:srcCompat="@drawable/paletacolores" />
</androidx.constraintlayout.widget.ConstraintLayout>